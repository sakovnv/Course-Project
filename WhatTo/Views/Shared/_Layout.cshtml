<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WhatTo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @if (Context.Request.Cookies["theme"] == null)
    {
        <link rel="stylesheet" href="~/css/light-theme.css" />
    }
    else
    {
        if (Context.Request.Cookies["theme"] == "dark")
        {
            <link rel="stylesheet" href="~/css/dark-theme.css" />
        }
        if (Context.Request.Cookies["theme"] == "light")
        {
            <link rel="stylesheet" href="~/css/light-theme.css" />
        }
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">What To</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item" id="dark-mode-switch">
                            <div class="custom-control custom-switch text-center nav-link">
                                @if (Context.Request.Cookies["theme"] == "dark")
                                {
                                    <input type="checkbox" asp-action="/Home/ChangeTheme" class="custom-control-input" checked id="DarkModeSwitch">
                                }
                                else
                                {
                                    <input type="checkbox" asp-action="/Home/ChangeTheme" class="custom-control-input" id="DarkModeSwitch">
                                }
                                <label class="custom-control-label" for="DarkModeSwitch">Dark mode</label>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2022 - WhatTo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/scripts/ckeditor/ckeditor.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
